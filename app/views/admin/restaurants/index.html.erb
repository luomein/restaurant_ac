<div class="container" >
<h1>餐廳後台</h1>
<div class="row">
<div class="col-md-12">
<%= paginate @restaurants %>
<table class="table table-striped table-boardered">
 <thead>
   <tr>
      <th>#</th>
      <th>Category</th>
      <th>Name</th>
      <th>#</th>
   </tr>
 </thead>
 <tbody>
   
 
  <% @restaurants.each do |restaurant|  %>
  <tr>
    <th scope="row" ><%= restaurant.id %></th>
    <td>[<%= restaurant.category.name %>]</td>
    <td><%= restaurant.name  %></td>
    <td>
    <%= link_to 'Show', admin_restaurant_path(restaurant)  %>
    <%= link_to 'Edit', edit_admin_restaurant_path(restaurant)  %>
    <%= link_to 'Delete' , admin_restaurant_path(restaurant) , method: :delete, data: {confirm: "Are you sure?"}  %>
    </td>
  </tr>

  <% end  %>

 </tbody>
</table>

<%= paginate @restaurants  %>

<%= link_to 'New Restaurant' , new_admin_restaurant_path   %>

</div>
</div>

</div>
